= form_for @lottery_number do |f|
  - if @lottery_number.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lottery_number.errors.count, "error")} prohibited this lottery_number from being saved:"
      %ul
        - @lottery_number.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :draw_date
    = f.date_select :draw_date
  .field
    = f.label :link
    = f.text_field :link
  .field
    = f.label :next_draw
    = f.date_select :next_draw
  .field
    = f.label :winning_number
    = f.text_field :winning_number
  .actions
    = f.submit 'Save'
